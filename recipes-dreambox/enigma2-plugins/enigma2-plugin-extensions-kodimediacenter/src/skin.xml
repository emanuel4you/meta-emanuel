<skin>
	<screen name="XBMCMediaCenter" position="1,1" size="1,1">
	</screen>
	<screen name="XBMCMediaCenterSummary" position="0,0" size="132,64" id="1">
		<widget source="parent.title" render="Label" position="0,0" size="132,32" font="Regular;14" halign="center" valign="center"/>
		<widget source="parent.lcdinfo" render="Label" position="0,26" size="132,32" font="Regular;12" halign="center" valign="center"/>
	</screen> 
	<!-- Color OLED screen (menus) -->
	<screen name="XBMCMediaCenterSummary" position="0,0" size="96,32" id="2">
		<widget source="parent.title" render="Label" position="0,0" size="96,32" font="Regular;11" halign="center" valign="center"/>
		<widget source="parent.lcdinfo" render="Label" position="0,26" size="96,28" font="Regular;9" halign="center" valign="center"/>
	</screen>
	<screen name="XBMCMediaCenterSummary" position="0,0" size="400,240" id="3">
		<ePixmap position="0,0" size="400,240" pixmap="skin_default/display_bg.png" zPosition="-1"/>
		<widget source="parent.title" render="Label" position="center,5" size="400,92" font="Display;48" halign="center" valign="top" transparent="1"/>
		<widget source="parent.lcdinfo" render="Label" position="center,105" size="400,132" font="Display;36" halign="center" valign="top" transparent="1"/>
	</screen>
	<screen name="XBMCMediaCenterBrowser" position="center,120" size="820,520" title="XBMCMediaCenter Browser">
		<ePixmap pixmap="skin_default/buttons/red.png" position="10,5" size="200,40" alphatest="on" />
		<ePixmap pixmap="skin_default/buttons/green.png" position="210,5" size="200,40" alphatest="on" />
		<widget name="buttonred" position="10,5" size="200,40" zPosition="1" font="Regular;20" halign="center" valign="center" backgroundColor="#9f1313" transparent="1" shadowColor="black" shadowOffset="-2,-2" />
		<widget name="buttongreen" render="Label" position="210,5" size="200,40" zPosition="1" font="Regular;20" halign="center" valign="center" backgroundColor="#1f771f" transparent="1" shadowColor="black" shadowOffset="-2,-2" />
		<eLabel position="10,50" size="800,1" backgroundColor="grey" />
		<widget name="info" position="10,55" size="800,50" font="Regular;20" valign="center" halign="left" />
		<eLabel position="10,110" size="800,1" backgroundColor="grey" />
		<widget name="filelist" position="10,120" size="800,390" enableWrapAround="1" scrollbarMode="showOnDemand" />
	</screen>
</skin>
