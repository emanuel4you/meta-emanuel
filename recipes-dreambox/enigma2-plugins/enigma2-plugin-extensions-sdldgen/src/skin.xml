<skin>
	<screen name="Dgen" position="1,1" size="1,1">
	</screen>
	<screen name="DgenSummary" position="0,0" size="132,64" id="1">
		<widget source="parent.title" render="Label" position="0,0" size="132,32" font="Regular;14" halign="center" valign="center"/>
		<widget source="parent.lcdinfo" render="Label" position="0,26" size="132,32" font="Regular;12" halign="center" valign="center"/>
	</screen> 
	<!-- Color OLED screen (menus) -->
	<screen name="DgenSummary" position="0,0" size="96,32" id="2">
		<widget source="parent.title" render="Label" position="0,0" size="96,32" font="Regular;11" halign="center" valign="center"/>
		<widget source="parent.lcdinfo" render="Label" position="0,26" size="96,28" font="Regular;9" halign="center" valign="center"/>
	</screen>
	<screen name="DgenSummary" position="0,0" size="400,240" id="3">
		<ePixmap position="0,0" size="400,240" pixmap="skin_default/display_bg.png" zPosition="-1"/>
		<widget source="parent.title" render="Label" position="center,5" size="400,92" font="Display;48" halign="center" valign="top" transparent="1"/>
		<widget source="parent.lcdinfo" render="Label" position="center,105" size="400,132" font="Display;36" halign="center" valign="top" transparent="1"/>
	</screen>
	<screen name="DgenBrowser" position="center,center" size="610,410" title="Dgen Browser" >
		<widget name="filelist" position="15,60" size="580,300" scrollbarMode="showOnDemand" />
		<ePixmap pixmap="skin_default/buttons/red.png" position="10,10" size="140,40" alphatest="on" />
		<ePixmap pixmap="skin_default/buttons/green.png" position="160,10" size="140,40" alphatest="on" />
		<widget name="buttonred" position="10,10" size="140,40" valign="center" halign="center" zPosition="1" font="Regular;20" transparent="1" shadowColor="black" shadowOffset="-2,-2" />
		<widget name="buttongreen" position="160,10" size="140,40" valign="center" halign="center" zPosition="1" font="Regular;20" transparent="1" shadowColor="black" shadowOffset="-2,-2" />
		<widget name="info" position="15,360" size="580,50" font="Regular; 20" zPosition="2" transparent="1" valign="center" halign="left" />
	</screen>
	<screen name="DgenBrowserSummary" position="0,0" size="132,64" id="1">
		<widget source="parent.title" render="Label" position="0,0" size="132,32" font="Regular;14" halign="center" valign="center"/>
		<widget source="parent.lcdinfo" render="Label" position="0,26" size="132,32" font="Regular;11" halign="center" valign="center"/>
	</screen>
	<!-- Color OLED screen (menus) -->
	<screen name="DgenBrowserSummary" position="0,0" size="96,32" id="2">
		<widget source="parent.title" render="Label" position="0,0" size="96,32" font="Regular;11" halign="center" valign="center"/>
		<widget source="parent.lcdinfo" render="Label" position="0,26" size="96,28" font="Regular;9" halign="center" valign="center"/>
	</screen>
	<screen name="DgenBrowserSummary" position="0,0" size="400,240" id="3">
		<ePixmap position="0,0" size="400,240" pixmap="skin_default/display_bg.png" zPosition="-1"/>
		<widget source="parent.title" render="Label" position="center,5" size="400,92" font="Display;48" halign="center" valign="top" transparent="1"/>
		<widget source="parent.lcdinfo" render="Label" position="center,105" size="400,132" font="Display;36" halign="center" valign="top" transparent="1"/>
	</screen>
</skin>
